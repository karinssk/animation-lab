generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Comment {
  id        String   @id @default(uuid())
  text      String
  image     String?  // Base64 string or URL
  slug      String   // Page identifier
  createdAt DateTime @default(now())
}
